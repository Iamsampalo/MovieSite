{
  "extends": [
    "next/core-web-vitals",  // This includes rules specifically for Next.js apps
    "eslint:recommended",    // Basic ESLint recommended rules
    "plugin:next/recommended"  // React-specific linting
  ],
  "plugins": [
    "next"  // Enable Next.js plugin
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off"  // Next.js automatically imports React
  }
}